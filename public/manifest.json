{
  "name": "GreenSentinel",
  "short_name": "GreenSentinel",
  "description": "Environmental incident reporting and monitoring system",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#10b981",
  "background_color": "#ffffff",
  "prefer_related_applications": false,
  "categories": ["utilities", "social", "productivity"],
  "shortcuts": [
    {
      "name": "Report Incident",
      "short_name": "Report",
      "description": "Submit a new incident report",
      "url": "/report",
      "icons": [
        {
          "src": "/icons/report-192.png",
          "sizes": "192x192",
          "type": "image/png",
          "purpose": "any"
        }
      ]
    },
    {
      "name": "View Map",
      "short_name": "Map",
      "description": "View incident map",
      "url": "/map",
