      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/home.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "platform": "narrow",
      "label": "Home Screen"
    },
    {
      "src": "/screenshots/map.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "platform": "narrow",
      "label": "Incident Map"
    },
    {
      "src": "/screenshots/report.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "platform": "narrow",
      "label": "Report Submission"
    }
  ],
  "related_applications": [],
  "share_target": {
    "action": "/report",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "photos",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+greensentinel",
      "url": "/%s"
    }
  ],
  "permissions": [
    "geolocation",
    "camera"
  ],
  "file_handlers": [
    {
      "action": "/report",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp", ".heic"]
      }
    }
  ],
  "display_override": [
    "standalone",
    "minimal-ui",
    "browser"
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "scope_extensions": [
    {
      "origin": "*.greensentinel.app"
    }
  ],
  "id": "greensentinel",
  "dir": "ltr",
  "lang": "en",
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "scope": "/",
  "serviceworker": {
    "src": "/sw.js",
    "scope": "/",
    "use_cache": true
  }
}
